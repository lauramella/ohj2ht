<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>


<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <bottom>
      <HBox alignment="CENTER_LEFT" BorderPane.alignment="CENTER">
         <children>
            <Button alignment="TOP_RIGHT" contentDisplay="RIGHT" mnemonicParsing="false" text="Add">
               <HBox.margin>
                  <Insets bottom="20.0" left="150.0" right="10.0" top="10.0" />
               </HBox.margin>
            </Button>
            <Button alignment="TOP_RIGHT" contentDisplay="RIGHT" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" text="Cancel">
               <HBox.margin>
                  <Insets bottom="10.0" right="10.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </bottom>
   <left>
      <Label text="Username" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets left="40.0" />
         </BorderPane.margin>
      </Label>
   </left>
   <right>
      <TextField BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets left="5.0" right="40.0" />
         </BorderPane.margin>
      </TextField>
   </right>
   <top>
      <Label text="Add new user" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="20.0" top="30.0" />
         </BorderPane.margin>
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
   </top>
</BorderPane>
